
<video class="videotwo" poster="assets/logo.png" autoplay="true" loop>
  <source src="assets/Croissants - 1261.mp4" type="video/mp4">
  <source src="assets/Croissants - 1261.webm" type="video/webm">
</video>








<div class="container">
  <div class="row">

<% if @courses.any? %>
        <% @courses.ten_most_recent.each do |course| %>
        <div class="col-sm-4 mb-3">
      <div class="card" style="width: 20rem;">
      <div class="card-block card-outline-primary mb-3 text-center">
      <p><%= image_tag(course.image, class: "img") %></p>
      <h4 class="card-title"><%= course.title %></h4>
      <p class="card-text"><%= course.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="course-title"><%= link_to course.title, course_path(course) %></li>
      </ul>
      </div>

      </div>

      <% end %>
      <% else %>
      <h3>No Courses added yet.</h3>
      <% end %>


</div>
</div>
<%= link_to "New Course", new_course_path, class: "btn-custom" %>
