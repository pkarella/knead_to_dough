<%= render('layouts/errors', :object => @course) %>

<h1>New Course</h1>

<%= form_for @course do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :cost %><br>
  <%= f.number_field :cost %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :image, class: 'col-sm-2 control-label'  %>
<%= f.file_field :image %>
  <%= f.submit  %>
<% end %>
