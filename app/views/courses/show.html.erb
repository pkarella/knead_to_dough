

<div class="row">
  <div class="col-m-4">
    <h1><%= @course.title %></h1>
    <h1><%= @course.name %></h1>
    <h1><%= @course.description %></h1>
  </div>




  <% if @course.reviews.any? %>
    <h4>Here are the reviews for this course:</h4>

    <ul>
      <% @course.reviews.each do |review| %>
        <li>
          <%= review.author %>
          <%= review.comment %>
          <%= link_to "add", edit_course_review_path(@course, review) %> |
          <%= link_to "Delete", course_review_path(@course, review),
                                   :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no tasks yet!</p>
  <% end %>
<p><%= link_to "Add a Review", new_course_review_path(@course) %></p>

  <p><%= link_to "Edit", edit_course_path(@course) %></p>
  <p><%= link_to "Delete", course_path(@course),
                           :data => {:confirm => "You sure?",
                                     :method => "delete"} %></p>
</div>



<p><%= link_to "Return to courses", courses_path %></p>
